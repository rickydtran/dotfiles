Include ~/.ssh/config.d/*

Host *
    PasswordAuthentication no
    KbdInteractiveAuthentication no
    ChallengeResponseAuthentication no
    ExitOnForwardFailure yes
    ForwardX11Trusted yes
    ServerAliveInterval 60
    ConnectTimeout 10
    AddKeysToAgent yes
    EscapeChar `
    IdentitiesOnly=yes
    ControlMaster auto
    ControlPersist 72000
    ControlPath ~/.ssh/s/%C

